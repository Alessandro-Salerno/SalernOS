name=binutils
revision=1
from_source=binutils
imagedeps="build-essential gcc"
hostdeps="automake autoconf-2.69"

configure() {
	${source_dir}/configure --target=$JINX_ARCH-salernos --prefix=${prefix} --with-sysroot=${sysroot_dir} --disable-werror
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR="${dest_dir}"
}
