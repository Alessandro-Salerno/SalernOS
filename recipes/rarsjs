#!/bin/sh

name=rarsjs
version=0.0.1
skip_pkg_check=yes
revision=1
git_url="https://github.com/ldlaur/rarsjs"
allow_network="yes"
commit="d699fb3abecc89612f3ab189733a1e2a9dbda527"
imagedeps="git build-essential"
hostdeps="gcc binutils libgcc-binaries"
deps="core-libs"

build() {
    cp -pr "${source_dir}"/* .
    rm -rf src/exec/ezld
    git clone https://github.com/Alessandro-Salerno/ezld src/exec/ezld
    make -j${parallelism} CC=${OS_TRIPLET}-gcc AR=${OS_TRIPLET}-ar
}

package() {
    mkdir -p "${dest_dir}"
    cp ./rarsjs "${dest_dir}"
}